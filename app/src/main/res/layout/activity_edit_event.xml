<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EditEventActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Edit Event"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#4A4A4A"
        android:gravity="center"
        android:padding="12dp"
        android:layout_marginTop="30dp"
        android:background="#FFFFFF"
        android:elevation="4dp"
        android:layout_marginBottom="10dp" />

    <!-- CardView for Inputs -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="10dp"
        app:cardCornerRadius="15dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="#FFFFFF">  <!-- Soft White Card -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:orientation="vertical">

            <!-- Select Event Name -->

            <!-- Change Event Name -->
            <EditText
                android:id="@+id/etAddSelectEvent"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Select Event"
                android:padding="12dp"
                android:textColor="@color/black"
                android:textColorHint="#4A4A4A"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/etAddChangeEventName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Change Event Name"
                android:textSize="16sp"
                android:padding="12dp"
                android:textColorHint="#4A4A4A"
                android:textColor="@color/black"
                android:inputType="date"
                />

            <!-- Change Date -->
            <EditText
                android:id="@+id/etAddChangeDate"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Change Date"
                android:textSize="16sp"
                android:padding="12dp"
                android:textColorHint="#4A4A4A"
                android:textColor="@color/black"
                />

            <!-- Change Address -->
            <EditText
                android:id="@+id/etAddChangeAddress"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Change Address"
                android:textSize="16sp"
                android:padding="12dp"
                android:textColorHint="#4A4A4A"
                android:textColor="@color/black"
                />

            <!-- Change Time -->
            <EditText
                android:id="@+id/etAddChangeTime"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Change Time"
                android:textSize="16sp"
                android:padding="12dp"
                android:textColorHint="#4A4A4A"
                android:textColor="@color/black"
                />

            <!-- Map Link -->
            <EditText
                android:id="@+id/etAddEventMapLink"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Map Link"
                android:textSize="16sp"
                android:padding="12dp"
                android:textColorHint="#4A4A4A"
                android:textColor="@color/black"
                />

            <!-- Coordinator Name -->
            <EditText
                android:id="@+id/etCordinatiorName"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Coordinator Name"
                android:textSize="16sp"
                android:padding="12dp"
                android:textColorHint="#4A4A4A"
                android:textColor="@color/black"
                />

            <!-- Mobile Number -->
            <EditText
                android:id="@+id/etAddEventMobNo"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Mobile Number"
                android:textSize="16sp"
                android:padding="12dp"
                android:textColorHint="#4A4A4A"
                android:textColor="@color/black"
                android:inputType="phone"
                />

            <!-- Event Description -->
            <EditText
                android:id="@+id/etAddEventDescription"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:hint="Event Description"
                android:textSize="16sp"
                android:padding="12dp"
                android:textColorHint="#4A4A4A"
                android:textColor="@color/black"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btnLoginlogin"
        android:text="Save"
        android:textSize="16sp"
        android:textStyle="italic"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="10dp"

        android:layout_marginTop="25dp"/>


</LinearLayout>
