<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingActivity">

    <EditText
        android:id="@+id/etSearch"
        android:layout_width="356dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"

        android:background="@drawable/etbgcolor"
        android:drawablePadding="20dp"
        android:hint="Search"
        android:inputType="text"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textColorHint="@color/black"
        android:textSize="17sp"
        android:drawableLeft="@drawable/icon_search"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="____________________________"
        android:textAlignment="center"
        android:textSize="30dp"
       />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSettingPermission"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginRight="150dp"
        android:text="Permissions"
       android:textAlignment="textStart"
        android:textSize="16sp"
        android:textStyle="italic" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSettingNotification"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="5dp"
        android:text="Notification"
        android:textAlignment="textStart"
        android:textSize="16sp"
        android:textStyle="italic" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSettingSecurity"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="5dp"
        android:text="Security Privacy"
        android:textAlignment="textStart"
        android:textSize="16sp"
        android:textStyle="italic" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSettingLanguage"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="5dp"
        android:text="Language Setting"
        android:textAlignment="textStart"
        android:textSize="16sp"
        android:textStyle="italic" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSettingSavedLoginInfo"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="5dp"
        android:text="Saved Login Info"
        android:textAlignment="textStart"
        android:textSize="16sp"
        android:textStyle="italic" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSettingBlockedUser"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="5dp"
        android:text="Blocked User"
        android:textAlignment="textStart"
        android:textSize="16sp"
        android:textStyle="italic" />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnSettingThemes"
        android:layout_width="400dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginRight="150dp"
        android:layout_marginBottom="5dp"
        android:text="Themes"
        android:textAlignment="textStart"
        android:textSize="16sp"
        android:textStyle="italic" />




</LinearLayout>